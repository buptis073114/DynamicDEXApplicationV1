<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.NoTitleBar.Fullscreen.SplashWnd" parent="@*android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">@drawable/splash_pic</item>
    </style>
    <style name="Transparent">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
    </style>
    <style name="WindowStyle">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="menuPopupStyle">
        <item name="android:windowEnterAnimation">@anim/menu_slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/menu_slide_out_of_bottom</item>
    </style>
    <style name="MyDialog" parent="@*android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_bkg</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="umeng_xp_grad_but">
        <item name="android:textSize">15.0dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/umeng_xp_btn_gradient_grey</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">5.0dip</item>
        <item name="android:layout_marginRight">5.0dip</item>
    </style>
    <style name="umeng_xp_download_but">
        <item name="android:textColor">#ffeeeeee</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/umeng_xp_download_gradient_grey</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">5.0dip</item>
        <item name="android:layout_marginRight">5.0dip</item>
    </style>
    <style name="umeng_xp_more_but">
        <item name="android:textSize">15.0dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/umeng_xp_btn_gradient_dark_grey</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">5.0dip</item>
        <item name="android:layout_marginRight">5.0dip</item>
    </style>
    <style name="umeng_xp_dialog_but">
        <item name="android:textSize">15.0dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/umeng_xp_btn_gradient_grey</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginRight">10.0dip</item>
        <item name="android:layout_marginBottom">10.0dip</item>
    </style>
    <style name="umeng_xp_dialog_download">
        <item name="android:textSize">15.0dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/umeng_xp_selector_download</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginRight">10.0dip</item>
        <item name="android:layout_marginBottom">10.0dip</item>
    </style>
    <style name="umeng_xp_dialog_cancel">
        <item name="android:textSize">15.0dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/umeng_xp_selector_cancel</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginRight">10.0dip</item>
        <item name="android:layout_marginBottom">10.0dip</item>
    </style>
    <style name="umeng_xp_dialog_download_window" parent="@*android:style/Theme.Dialog">
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/umeng_xp_dialog_animations</item>
        <item name="android:background">@*android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="umeng_xp_dialog_animations">
        <item name="android:windowEnterAnimation">@anim/umeng_xp_fade_in</item>
        <item name="android:windowExitAnimation">@anim/umeng_xp_fade_out</item>
    </style>
</resources>
